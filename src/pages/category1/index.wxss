.change-style-button{
    background-color: #F4C869;
    width: 50px;
    height: 50px;
    border-radius: 25px;
    position: fixed;
    z-index: 2;
    right:20px;
    bottom: 20px;
    box-shadow: #000000 0px 0px 20px;
    font-size: 10px;
    line-height: 50px;
    text-align: center;
}
/* style 1*/
.goods-category-style-1{
    display: flex;
    justify-content: space-between;
    background-color: #ffffff;
    position: relative;
}
.goods-category-style-1 .line{
    height: 100vh;
    background-color: #F8F8F8;
    width: 1px;
    left: 20.8vw;
    top: 0;
    position: absolute;
}
.goods-category-style-1 aside:nth-child(1){
    width: 20.8vw;
}
.goods-category-style-1 aside:nth-child(1) scroll-view{
    width: 20.8vw;
    display: block;
    overflow: hidden;
    height: 100vh;
}
.goods-category-style-1 aside:nth-child(1) scroll-view details{
    padding: 10px 0;
    margin: 0 auto;
    height: 36px;
    width: 60px;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}
.goods-category-style-1 aside:nth-child(1) scroll-view details text{
    font-size: 14px;
    line-height: 14px;
    color: #333333;
}
.goods-category-style-1 aside:nth-child(1) scroll-view details.active text{
    font-size: 14px;
    line-height: 14px;
    color: #FA0000;
    font-weight: bold;
}
.goods-category-style-1 aside:nth-child(2){
    width: 79.2vw;
    display: flex;
    justify-content: center;

}
.goods-category-style-1 aside:nth-child(2)>scroll-view{
    width: 79.2vw;
    height: 100vh;
    white-space: nowrap;
    overflow: scroll;
    box-sizing: border-box;

}
.goods-category-style-1 aside:nth-child(2)>scroll-view section{
    width: 261px;
    display: block;
    overflow: hidden;
    margin: 0 auto
}
.goods-category-style-1 aside:nth-child(2)>scroll-view section>details{
    width: 87px;
    height: 78px;
    text-align: center;
    display:block;
    overflow:hidden;
    float: left;
    margin-bottom: 15px;
    margin-top: 10px;
}
.goods-category-style-1 aside:nth-child(2)>scroll-view section>details>image{
    width: 52px;
    height: 52px;
    margin: 0 auto 15px auto;
    display:block;
}
.goods-category-style-1 aside:nth-child(2)>scroll-view section>details>text{
    font-size: 11px;
    color:#666666;
    line-height: 12px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display:block;
}
